<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script>
       

        function sum() {
            const num1 = parseFloat(document.getElementById('num1').value);
            const num2 = parseFloat(document.getElementById('num2').value);
            let res = num1 + num2;
            console.log("Hasil penambahan: " + res);
            document.getElementById('result').textContent ="Result: " +res;
        }

        function sub() {
            const num1 = parseFloat(document.getElementById('num1').value);
            const num2 = parseFloat(document.getElementById('num2').value);
            let res = num1 - num2;
            console.log("Hasil pengurangan: " + res);
            document.getElementById('result').textContent ="Result: " +res;
        }

        function div() {
            const num1 = parseFloat(document.getElementById('num1').value);
            const num2 = parseFloat(document.getElementById('num2').value);
            if (num2 !== 0) {
                let res = num1 / num2;
                console.log("Hasil pembagian: " + res);
                document.getElementById('result').textContent ="Result: " +res;
            } else {
                console.log("Pembagian dengan 0 tidak diperbolehkan.");
                document.getElementById('result').textContent ="Result: " +res;
            }
        }
        function multiply() {
            const num1 = parseFloat(document.getElementById('num1').value);
            const num2 = parseFloat(document.getElementById('num2').value);
            let res = num1 * num2;
            console.log("Hasil perkalian: " + res);
            document.getElementById('result').textContent ="Result: " +res;
        }

    </script>
</head>
<body>
    <input type="number" id="num1" placeholder="Masukkin angka pertama: ">
    <input type="number" id="num2" placeholder="Masukkin angka kedua">
    <button onclick="sum()">+</button>
    <button onclick="sub()">-</button>
    <button onclick="div()">/</button>
    <button onclick="multiply()">x</button>
    <p id="result"></p>
</body>
</html>